Header set Access-Control-Allow-Origin "*"
RewriteEngine On

RewriteRule ^qr-code\/(.*)(?:\/)?$ http://api.qrserver.com/v1/create-qr-code/?size=300x300&margin=10&bgcolor=fff&color=4b6584&data=$1
RewriteRule ^mod\/requests\/(.*)\/(.*)(?:\/)?$ moderator.php?modrequests&did=$1&sid=$2
RewriteRule ^mod\/requests(?:\/)?$ moderator.php?showmodrequests
RewriteRule ^mod\/card\/(.*)\/(.*)\/(.*)\/(.*)\/(.*)(?:\/)?$ mod-card.php?did=$1&ip=$2&sid=$3&t=$4&c=$5
RewriteRule ^mod\/login-status\/(.*)\/(.*)(?:\/)?$ moderator.php?loginstatus&did=$1&sid=$2
RewriteRule ^mod\/login\/(.*)\/(.*)(?:\/)?$ moderator.php?login&did=$1&sid=$2
RewriteRule ^companies(?:\/)?$ index2.php?companies

RewriteRule ^company\/([a-zA-Z0-9-_\s]+)(?:\/)?$ index2.php?company=$1&mode=information
RewriteRule ^company\/([a-zA-Z0-9-_\s]+)\/(\w+)(?:\/)?$ index2.php?company=$1&mode=$2&details=minimum
RewriteRule ^company\/([a-zA-Z0-9-_\s]+)\/(\w+)\/([a-zA-Z0-9-_\s]+)(?:\/)?$ index2.php?company=$1&mode=$2&details=$3
RewriteRule ^company\/([a-zA-Z0-9-_\s]+)\/(\w+)\/([a-zA-Z0-9-_\s]+)\/(.*)(?:\/)?$ index2.php?company=$1&mode=$2&details=$3&values=$4
